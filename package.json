{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/styles.css",
    "deploy": "fly deploy --remote-only",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/styles.css",
    "dev:remix": "remix dev",
    "migrate": "prisma migrate deploy",
    "migrate:test": "dotenv -e .env.test prisma migrate deploy",
    "prestart": "yarn migrate",
    "start": "remix-serve build",
    "test": "NODE_ENV=test vitest --threads false"
  },
  "dependencies": {
    "@prisma/client": "4.5.0",
    "@remix-run/node": "^1.7.5",
    "@remix-run/react": "^1.7.5",
    "@remix-run/serve": "^1.7.5",
    "@remix-run/server-runtime": "^1.7.5",
    "@types/convict": "^6.1.1",
    "@types/convict-format-with-validator": "^6.0.2",
    "@types/uuid": "^8.3.4",
    "awilix": "^8.0.0",
    "convict": "^6.2.3",
    "convict-format-with-validator": "^6.2.0",
    "dotenv": "^16.0.3",
    "http-status-codes": "^2.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "remix-auth": "^3.3.0",
    "remix-auth-socials": "^1.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.5",
    "@remix-run/eslint-config": "^1.7.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/express": "^4.17.14",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^2.2.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.5.0",
    "eslint": "8.22.0",
    "happy-dom": "^7.6.6",
    "jwt-simple": "^0.5.6",
    "nodemon": "^2.0.20",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.18",
    "prisma": "^4.5.0",
    "tailwindcss": "^3.2.2",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.24.5",
    "vitest-mock-extended": "^1.0.7"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ]
}
