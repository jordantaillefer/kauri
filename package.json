    "@remix-run/serve": "2.4.0",
    "@remix-run/server-runtime": "2.4.0",
    "awilix": "9.0.0",
    "clsx": "2.0.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "date-fns": "2.30.0",
    "dotenv": "16.3.1",
    "dotenv-expand": "10.0.0",
    "http-status-codes": "2.3.0",
    "isbot": "3.7.1",
    "lodash.debounce": "4.0.8",
    "lodash.padstart": "4.6.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reflect-metadata": "0.2.1",
