{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/styles.css",
    "deploy": "fly deploy --remote-only",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/styles.css",
    "dev:remix": "remix dev",
    "test": "vitest",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@prisma/client": "4.3.1",
    "@remix-run/node": "^1.7.1",
    "@remix-run/react": "^1.7.1",
    "@remix-run/serve": "^1.7.1",
    "@types/uuid": "^8.3.4",
    "awilix": "^7.0.3",
    "prisma": "^4.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.3.0",
    "remix-auth-socials": "^1.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "eslint": "8.22.0",
    "happy-dom": "^6.0.4",
    "nodemon": "^2.0.19",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4",
    "vite": "^3.1.3",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.23.4",
    "vitest-mock-extended": "^0.1.15"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ]
}
