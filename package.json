{
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "vite build && vite build --ssr",
    "deploy": "fly deploy --remote-only",
    "dev": "vite dev --port 3000",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check app",
    "prettier:fix": "prettier --write app",
    "format:check": "yarn lint:check && yarn prettier:check && tsc --noEmit",
    "format:fix": "yarn lint:fix && yarn prettier:fix",
    "migrate": "prisma migrate deploy",
    "migrate:test": "dotenv -e .env.test prisma migrate deploy",
    "prestart": "yarn migrate",
    "start": "remix-serve ./build/index.js",
    "test": "NODE_ENV=test vitest"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "1.7.17",
    "@heroicons/react": "2.0.18",
